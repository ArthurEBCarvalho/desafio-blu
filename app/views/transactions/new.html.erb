<%- model_class = Transaction -%>
<div class="page-header">
  <h1>Importar Arquivo de Transações Financeiras</h1>
</div>

<%= form_tag "/transactions", :class => "form-horizontal transaction", multipart: true do %>

  <% if @transaction.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @transaction.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= label_tag "Arquivo" %>
    <div class="col-lg-6">
      <%= file_field_tag :arquivo, :class => 'form-control', required: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-6">
      <%= submit_tag "Importar", :class => "btn btn-primary" %>
      <%= link_to "Voltar", transactions_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

